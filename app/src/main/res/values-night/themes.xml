<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.Forks" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryVariant">@color/colorPrimaryVariant</item>
        <item name="colorOnPrimary">@color/colorOnPrimary</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/colorSecondary</item>
        <item name="colorSecondaryVariant">@color/colorSecondaryVariant</item>
        <item name="colorOnSecondary">@color/colorOnSecondary</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/colorPrimaryVariant</item>
        <item name="colorSurface" tools:targetApi="l">@color/colorPrimaryDark</item>
        <!-- Customize your theme here. -->

        <item name="android:windowBackground">@color/colorPrimaryVariant</item>
        <item name="searchBarColor">@color/colorPrimaryDark</item>
    </style>

    <style name="card">
        <item name="android:backgroundTint">@color/colorPrimaryDark</item>
    </style>

    <style name="titleText">
        <item name="android:textColor">@color/colorPrimary</item>
    </style>

    <style name="subTitleText">
        <item name="android:textColor">@color/colorOnPrimary</item>
    </style>
</resources>